<h1><%= stylesheet_link_tag "mains"%></h1>

<p><%= session[:title] %></p>

<h1>Listing Article</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @a1.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book %></td>
        <td><%= link_to "Edit", book %></td>
        <td><%= link_to "Destroy", book, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h1>Articles</h1>

<ul>
  <% @a1.each do |article| %>
  

    <li>
      <%= article.title %> <%=article.body %>

    </li>
      
  <% end %>
</ul>

<h1>
<%= auto_discovery_link_tag(:json,
  {title: "RSS Feed"}) %>
</h1>
<h1>Articles</h1>

<ul>
  <% @a1.each do |article| %>
    <li>
      <a href="/articles/<%= article.id %>">
        <%= article.title %>
      </a>
    </li>
    <li>
      <a href="<%= article_path(article) %>">
        <%= article.title %>
      </a>
    </li>
    <li>
       <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>
